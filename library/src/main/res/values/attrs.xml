<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PrimeMonthView">
        <attr name="monthLabelTextColor" format="color" />
        <attr name="weekLabelTextColor" format="color" />
        <attr name="dayLabelTextColor" format="color" />
        <attr name="todayLabelTextColor" format="color" />
        <attr name="pickedDayLabelTextColor" format="color" />
        <attr name="pickedDayCircleColor" format="color" />
        <attr name="disabledDayLabelTextColor" format="color" />

        <attr name="monthLabelTextSize" format="dimension" />
        <attr name="weekLabelTextSize" format="dimension" />
        <attr name="dayLabelTextSize" format="dimension" />

        <attr name="monthLabelTopPadding" format="dimension" />
        <attr name="monthLabelBottomPadding" format="dimension" />
        <attr name="weekLabelTopPadding" format="dimension" />
        <attr name="weekLabelBottomPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PrimeCalendarView">
        <attr name="heightMultiplier" format="float" />
        <attr name="calendarType" format="enum">
            <enum name="civil" value="0"/>
            <enum name="persian" value="1"/>
            <enum name="hijri" value="2"/>
        </attr>
    </declare-styleable>
</resources>
