<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/colorPrimary">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_bottom_sheet_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topLineImageView"
        android:layout_width="32dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_rounded_line" />

    <ViewStub
        android:id="@+id/actionViewStub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@id/actionViewStub"
        app:layout_constraintTop_toBottomOf="@id/topLineImageView" />

    <FrameLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/material_size_4"
        app:layout_constraintBottom_toTopOf="@id/calendarView"
        app:layout_constraintTop_toBottomOf="@id/actionViewStub">

        <ViewStub
            android:id="@+id/headerViewStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@id/headerViewStub" />

    </FrameLayout>

    <com.aminography.primedatepicker.calendarview.PrimeCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:id="@+id/circularRevealFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            app:layout_behavior="com.google.android.material.transformation.FabTransformationSheetBehavior">

            <ViewStub
                android:id="@+id/gotoViewStub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inflatedId="@id/gotoViewStub" />

        </com.google.android.material.circularreveal.CircularRevealFrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            app:backgroundTint="#00000000"
            app:elevation="0dp"
            app:fabCustomSize="8dp"
            app:fabSize="auto" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>